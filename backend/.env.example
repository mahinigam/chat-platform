# Backend Environment Variables Example

# Application
NODE_ENV=development
PORT=3000
SERVER_INSTANCE_ID=server-1

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=5
DB_POOL_MAX=50

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=secret_password_here

# JWT Authentication
# CRITICAL: This must be set to a strong secret in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Security (CORS)
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
# Window size in milliseconds (e.g., 60000 = 1 minute)
WINDOW_MS=60000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100
# Max socket connections per window
CONNECTION_RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Email Service (SMTP / SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
SMTP_SECURE=false
SMTP_FROM=noreply@yourdomain.com

# Spotify Integration
# Get credentials from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
